<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sge_mobileandroid.sge_mobileandroid.Cadastro_Produtos">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/prod_descricao_ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Descrição do produto..." />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/preco_01_ID"
        android:layout_below="@+id/prod_descricao_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="P1" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/preco_02_ID"
        android:layout_below="@+id/prod_descricao_ID"
        android:layout_toRightOf="@+id/preco_01_ID"
        android:layout_toEndOf="@+id/preco_01_ID"
        android:hint="P2" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/preco_03_ID"
        android:layout_alignBottom="@+id/preco_02_ID"
        android:layout_toRightOf="@+id/preco_02_ID"
        android:layout_toEndOf="@+id/preco_02_ID"
        android:hint="P3" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/preco_04_ID"
        android:layout_alignBottom="@+id/preco_03_ID"
        android:layout_toRightOf="@+id/preco_03_ID"
        android:layout_toEndOf="@+id/preco_03_ID"
        android:hint="P4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Grava"
        android:id="@+id/grava_ID"
        android:layout_alignBottom="@+id/preco_04_ID"
        android:layout_toRightOf="@+id/preco_04_ID"
        android:layout_toEndOf="@+id/preco_04_ID" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Exclui"
        android:id="@+id/apaga_ID"
        android:layout_alignBottom="@+id/grava_ID"
        android:layout_toRightOf="@+id/grava_ID"
        android:layout_alignRight="@+id/prod_descricao_ID"
        android:layout_alignEnd="@+id/prod_descricao_ID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/voltar_ID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/apaga_ID"
        android:layout_alignEnd="@+id/apaga_ID" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_ID"
        android:layout_above="@+id/voltar_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/preco_01_ID" />

</RelativeLayout>
</ScrollView>