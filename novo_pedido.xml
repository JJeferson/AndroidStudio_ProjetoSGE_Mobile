<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sge_mobileandroid.sge_mobileandroid.Novo_Pedido">


    <Button
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/seleciona_Cliente_ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cliente_Texto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/seleciona_Cliente_ID"
        android:hint="Selecione um cliente  -->" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/cancelar_ID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Excluir_ID"
        android:layout_alignEnd="@+id/Excluir_ID" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/Produto_Texto"
        android:hint=" Produto"
        android:layout_below="@+id/Exibe_Endereco_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/seleciona_Produto_ID"
        android:layout_alignBottom="@+id/Produto_Texto"
        android:layout_toRightOf="@+id/Produto_Texto"
        android:layout_toEndOf="@+id/Produto_Texto" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/QTDE"
        android:inputType="number"
        android:hint="QTDE"
        android:layout_alignTop="@+id/Add_QTDE_ID"
        android:layout_toLeftOf="@+id/Add_QTDE_ID"
        android:layout_toStartOf="@+id/Add_QTDE_ID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/ListaPreco"
        android:hint="VALOR"
        android:inputType="number"
        android:layout_alignTop="@+id/seleciona_Produto_ID"
        android:layout_toRightOf="@+id/seleciona_Produto_ID"
        android:layout_toEndOf="@+id/seleciona_Produto_ID"
        android:layout_above="@+id/Add_Prod_ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Valor_Total"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/ListaPreco"
        android:layout_toEndOf="@+id/ListaPreco" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF"
        android:id="@+id/grava_ID"
        android:layout_above="@+id/cancelar_ID"
        android:layout_alignRight="@+id/cancelar_ID"
        android:layout_alignEnd="@+id/cancelar_ID"
        android:layout_toRightOf="@+id/Excluir_ID"
        android:layout_toEndOf="@+id/Excluir_ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor:"
        android:id="@+id/textView5"
        android:layout_above="@+id/Excluir_ID"
        android:layout_toLeftOf="@+id/seleciona_ListaPreco_ID"
        android:layout_toStartOf="@+id/seleciona_ListaPreco_ID" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/listView_ID"
        android:layout_alignRight="@+id/Add_Prod_ID"
        android:layout_alignEnd="@+id/Add_Prod_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Add_Prod_ID"
        android:layout_above="@+id/Valor_Total" />

    <Button
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/seleciona_ListaPreco_ID"
        android:layout_alignBottom="@+id/ListaPreco"
        android:layout_toRightOf="@+id/ListaPreco"
        android:layout_toEndOf="@+id/ListaPreco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Exibe_Endereco_ID"
        android:layout_below="@+id/seleciona_Cliente_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/Add_QTDE_ID"
        android:layout_above="@+id/Add_Prod_ID"
        android:layout_alignRight="@+id/Exibe_Endereco_ID"
        android:layout_alignEnd="@+id/Exibe_Endereco_ID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar ao Pedido"
        android:id="@+id/Add_Prod_ID"
        android:layout_below="@+id/seleciona_Produto_ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:id="@+id/Excluir_ID"
        android:layout_alignBottom="@+id/grava_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Add_Prod_ID"
        android:layout_alignRight="@+id/listView_ID"
        android:layout_alignEnd="@+id/listView_ID" />

</RelativeLayout>
